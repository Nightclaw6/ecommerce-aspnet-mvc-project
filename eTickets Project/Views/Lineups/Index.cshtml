@model IEnumerable<Lineup>


@{
    ViewData["Title"] = "Lineup List";
}

@*Write code*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BandLogo)</th>
                    <th>@Html.DisplayNameFor(model => model.BandName)</th>
                    <th>@Html.DisplayNameFor(model => model.BandBio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.BandLogo" alt="@item.BandName" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BandName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BandBio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.BandId">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.BandId">
                                <i class="bi bi-eye"></i>Details
                            </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.BandId">
                                <i class="bi bi-trash"></i>Delete 
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            
        </table>

    </div>
</div>

<div style="position:fixed; right:570px; bottom:680px" class="text-white">
    <a asp-controller="Lineups" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>