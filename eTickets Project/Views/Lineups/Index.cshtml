@model IEnumerable<Lineup>


@{
    ViewData["Title"] = "Lineup List";
}

@*Write code*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BandLogo)</th>
                    <th>@Html.DisplayNameFor(model => model.BandName)</th>
                    <th>@Html.DisplayNameFor(model => model.BandBio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.BandLogo" alt="@item.BandName" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BandName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BandBio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a> |
                            <a class="btn btn-outline-info">
                                <i class="bi bi-eye"></i>Details
                            </a> |
                            <a class="btn btn-danger text-white">
                                <i class="bi bi-trash"></i>Delete 
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            
        </table>

    </div>
</div>